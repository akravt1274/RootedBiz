<div class="row">
    <h3 class="text-center text-muted mt-2"> Welcome, {{name}}! </h3>
</div>

<div class="container p-2">
  <div class="row justify-content-around">
    <div class="col-5">
      <h3 class="mb-4">
        <small class="text-muted">Add Your Local Business</small>
      </h3> 
      <form class="new-project-form mb-2">
        <div class="mb-2">
          <select class="form-select form-select-sm" name="category" id="project-category">
            <option selected>Select a category</option>
            <option value="Restaurant">Restaurant</option>
            <option value="Retail">Retail</option>
            <option value="Service">Service</option>
            <option value="Entertainment">Entertainment</option>
          </select>
        </div>        
        <div class="mb-2">
          <label for="project-name" class="form-label text-muted">Business Name:</label>
          <input class="form-control p-0" type="text" id="project-name" name="project-name">
        </div>
        <div class="mb-2">
          <label for="project-desc" class="form-label text-muted">Description:</label>
          <textarea class="form-control p-0" id="project-desc" name="project-desc"></textarea>
        </div>        
        <div class="mb-2">
          <label for="project-address" class="form-label text-muted">Address</label>
          <input class="form-control p-0" type="text" id="project-address" name="address">
        </div>
        <div class="mb-2">
          <label for="img-url" class="form-label text-muted">Image URL</label>
          <input class="form-control p-0" type="text" id="img-url" name="img-url">
        </div>
        <div class="mb-2">
          <label for="url" class="form-label text-muted">Business URL</label>
          <input class="form-control p-0" type="text" id="url" name="url">
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-light px-4 py-2">Create</button>
        </div>
      </form>
    </div>
  
    <div class="col-2"></div>

    {{#if businesses.length}}
    <div class="col-5 project-list">
      <h3 class="mb-4"><small class="text-muted">Current Businesses</small></h3>
  
      {{#each businesses as |business|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/api/business/{{business.id}}" class="link-secondary">{{business.name}}</a></h4>
        </div>
        <div class="col-md-4">
          <button type="submit" class="btn btn-link btn-sm p-0 text-danger" data-id="{{business.id}}">X</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>

</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="./js/profile.js"></script>
