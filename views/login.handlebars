<div class="container">
  <div class="row py-4 media">  
    <div class="col-4">
      <div class="container p-0"></div>
      <div class="text-center">
        <img src="/assets/logo.png" alt="blog-image" class="img-fluid media" style="height:250px;">
      </div>
    </div>
    <div class="col-4">
      <h2 class="text-muted">Login</h2>
      <form class="form login-form">
        <div class=" mb-3 form-group text-end">
          <label for="email-login" class="form-label text-muted">email:</label>
          <input class="form-control p-0" type="text" id="email-login" />
        </div>
        <div class="mb-3 form-group text-end">
          <label for="password-login" class="form-label text-muted">password:</label>
          <input class="form-control p-0" type="password" id="password-login" />
        </div>
        <div class="mb-3 form-group text-end">
          <p id="login-error" class="text-danger"></p>
          <button class="btn btn-light px-4 py-2" type="submit">login</button>
        </div>
      </form>
    </div>  
    <div class="col-4">
      <h2 class="text-muted">Signup</h2>
      <form class="form signup-form">
        <div class="mb-3 form-group text-end">
          <label for="name-signup" class="form-label text-muted">name:</label>
          <input class="form-control p-0" type="text" id="name-signup" />
        </div>
        <div class=" mb-3 form-group text-end">
          <label for="email-signup" class="form-label text-muted">email:</label>
          <input class="form-control p-0" type="text" id="email-signup" />
        </div>
        <div class=" mb-3 form-group text-end">
          <label for="password-signup" class="form-label text-muted">password:</label>
          <input class="form-control p-0" type="password" id="password-signup" />
        </div>
        <div class="mb-3 form-group text-end">
          <p id="signup-error" class="text-danger"></p>
          <button class="btn btn-light px-4 py-2" type="submit">signup</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

