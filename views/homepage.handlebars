{{#if categories.length}}
<div class="container p-2">
  <div class="row justify-content-around mt-4">
    <div class="col-6 text-center">
      <img src="/assets/logo.png" alt="blog-image" class="img-fluid" style="height:450px;">
    </div>
    <div class="col-6">
      <div class="row">
        <h3 class="text-center text-muted m-4"> Where neighbors become friends, and businesses become family! </h3>
      </div>
      {{#each categories as |category| }}    
        <div class="py-2 text-center">
          <a href="/category/{{category.id}}" class="btn btn-light btn-block"  type="button">{{category.name}}</a>
        </div>            
      {{/each}}
    </div>
  </div>
</div>
{{/if}}