{{#if business}}
  {{#if business.rating}}
    <body onload="setRating({{business.rating}})"> </body>
  {{/if}}
<div class="container p-2">
  <div class="row justify-content-around mt-4">
    <div class="col-6 text-center">
      <h3 class="text-center text-muted m-4">{{business.name}}</h3>
      <p>{{business.description}}</p>
      <a href="{{business.url}}" class="btn btn-link" target="_blank" type="button">Visit Website</a>
      <div>
        <img src="{{business.img_url}}" alt="url-image" class="img-fluid" style="height:150px;">
      </div>      
      <div>
        <span onclick="ratingHandler(1, {{business.id}})" class="star">★
        </span>
        <span onclick="ratingHandler(2, {{business.id}})" class="star">★
        </span>
        <span onclick="ratingHandler(3, {{business.id}})" class="star">★
        </span>
        <span onclick="ratingHandler(4, {{business.id}})" class="star">★
        </span>
        <span onclick="ratingHandler(5, {{business.id}})" class="star">★
        </span>
      </div>      
    </div>    
    <div class="col-6 text-center">
      <h3 class="text-center text-muted m-4">Address</h3>
        <p>{{business.address}}</p>
        <div id="map" style="height: 500px"></div>      
    </div>
  </div> 
</div>

<script>
  const businessAddress = "{{business.address}}";
</script>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB0j6P6NzibTbN6mW0njzZBADZxIV72TWE&callback=initMap" async defer></script>
<script src="/js/maps.js"></script>
<script src="/js/rating.js"></script>
{{else}}
<div class="text-center">No details found</div>
{{/if}}


